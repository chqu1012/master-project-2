<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.dc.hska.gef.uml.viewer.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="de.dc.hska.gef.uml.viewer.Perspective"
            id="de.dc.hska.gef.uml.viewer.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="de.dc.hska.gef.uml.viewer.View"
            id="de.dc.hska.gef.uml.viewer.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="de.dc.hska.gef.uml.viewer.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.dc.hska.gef.uml.editor.UMLGraphicalEditor"
            contributorClass="de.dc.hska.gef.uml.editor.UMLGraphicalEditorActionBarAdvisor"
            default="false"
            id="de.dc.hska.gef.projektarbeit.uml.editor"
            name="UML Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.dc.hska.gef.uml.editor.OpenEditor"
            name="OpenEditor">
      </command>
      <command
            defaultHandler="de.dc.hska.gef.uml.handler.AddDummyClassHandler"
            id="de.dc.hska.gef.uml.viewer.AddDummyClass"
            name="Add dummy class">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.dc.hska.gef.uml.handler.OpenEditorHandler"
            commandId="de.dc.hska.gef.uml.editor.OpenEditor">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="de.dc.hska.gef.uml.editor.OpenEditor"
                  label="Open UML Editor">
            </command>
         </menu>
         <command
               commandId="de.dc.hska.gef.uml.viewer.AddDummyClass"
               label="Add Dummy Class"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
